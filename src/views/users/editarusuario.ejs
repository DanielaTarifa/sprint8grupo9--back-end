<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %> 
    
<body>

    <%- include('../partials/header') %> 

    <div class="main-register">
    
        <div class="formulario">
            
         
            <form method="POST" action="/perfil/edit/<%= user.id %>?_method=put " id="form" enctype="multipart/form-data">   

                <div class="register">

                    <h1 class="registrate">EDITAR PERFIL</h1><br>
                        
                            <label ></label>
                            <input 
                            type="text" 
                            class="reg " 
                            name="nombre" 
                            id="nombre" 
                            placeholder="Ingresa tu nombre" 
                            value="<%= locals.oldData ? oldData.nombre : user.name %>"
                            >
                            <small class="errors"></small>
                            <% if (locals.errors && errors.nombre) { %>
                                <div class="text-danger">
                                    <%= errors.nombre.msg %> 
                                </div>
                            <% } %>

                            <label for="apellido"></label>
                            <input 
                            type="text" 
                            class="reg " 
                            name="apellido" 
                            id="apellido" 
                            placeholder="Ingresa tu apellido" 
                            value="<%= locals.oldData ? oldData.apellido : user.lastname %>"
                            >
                            <small class="errors"></small>
                            <% if (locals.errors && errors.apellido) { %>
                                <div class="text-danger">
                                    <%= errors.apellido.msg %> 
                                </div>
                            <% } %>
                        
                            <label for="Nombre de usuario"></label>
                            <input 
                            type="text" 
                            class="reg " 
                            name="nombreDeUsuario" 
                            id="Nombre de usuario" 
                            placeholder="Ingresa tu nombre de usuario" 
                            value="<%= locals.oldData ? oldData.nombreDeUsuario : user.userName %>"
                            >
                            <small class="errors"></small>
                        
                            <% if (locals.errors && errors.nombreDeUsuario) { %>
                                <div class="text-danger">
                                    <%= errors.nombreDeUsuario.msg %> 
                                </div>
                            <% } %>

                            <label for="avatar">Elige una foto de perfil</label>
                            <input 
                            type="file" 
                            name="avatar" 
                            class="reg" 
                            id="avatar"
                            value="<%= locals.oldData ? oldData.avatar : user.avatar %> " 
                            >
                            <small class="errors"></small>
                            <p>Esta wea fue tu imagen anterior</p>
                            <img src="/img/avatar/<%=user.avatar%>" alt="producto" width="100" class="product_img"></a>
                            <% if (locals.errors && errors.avatar) { %>
                                <div class="text-danger">
                                    <%= errors.avatar.msg %> 
                                </div>
                            <% } %>
                            
                            <label for="email"></label>
                            <input 
                            type="email" 
                            class="reg" 
                            name="email" 
                            id="e-mail" 
                            placeholder="Ingresa tu email" 
                            value="<%= locals.oldData ? oldData.email : user.email %> "
                            >
                            <small class="errors"></small>
                            <% if (locals.errors && errors.email) { %>
                                <div class="text-danger">
                                    <%= errors.email.msg %> 
                                </div>
                            <% } %>

                            <label for="tel"></label>
                            <input 
                            type="text" 
                            class="reg" 
                            name="tel" 
                            id="tel" 
                            placeholder="Celular/Teléfono" 
                            value="<%= locals.oldData ? oldData.tel : user.cel %>"
                            >
                            <small class="errors"></small>
                            <% if (locals.errors && errors.tel) { %>
                                <div class="text-danger">
                                    <%= errors.tel.msg %> 
                                </div>
                            <% } %>

                            <label for="password"></label>
                            <input 
                            type="password" 
                            class="reg" 
                            name="password" 
                            id="contraeña" 
                            placeholder="Crea una contraseña" 
                            value=""
                            >
                            <small class="errors"></small>
                            

                            <label for="contraeña"></label>
                            <input 
                            type="password" 
                            class="reg" 
                            name="otraPassword" 
                            id="contraeña" 
                            placeholder="Confirmar Contraseña" 
                            value=""
                            >
                            <small class="errors"></small>
                            
                </form>

                        <button  class="reg2" type="submit" href="/perfil/edit/<%= user.id %>" ><a >Actualizar datos</a> </button>
                    
                </div>
        </div>

    </div>

    <script src="/js/editarPerfilV.js"></script> <!------atajo: ctrl+u+k--->

    <%- include('../partials/footer') %>
    
</body>
</html>